@model IEnumerable<FirstProjectHallBooking.Models.Testimonial>
@{ Layout = "~/views/shared/_AdminLayout.cshtml"; }
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Feedback)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback)
            </td>
             <td>
                @if (item.State==true)
                    {
                        <text>Accepted</text>
                    }
                    else if (item.State==false)
                    {
                     <text>Rejected</text>   
                    }else
                    {
                        <text>In Progress</text>
                    }
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                 @{
                    if (item.State==null)
                        {
                           <text>|</text>  <a asp-action="ApproveTestimonials"  asp-route-id="@item.Id">Accept</a> <text>|</text>
                         <a asp-action="RejectTestimonials" asp-route-id="@item.Id">Reject</a> 
                        }
                }
            </td>
        </tr>
}
    </tbody>
</table>
